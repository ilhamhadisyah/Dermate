<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.dermate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryVariant">@color/theme_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins</item>
    </style>

    <color name="camera_placeholder_background">@color/grey_light</color>
    <color name="card_background">@color/white</color>
    <color name="text_title">@color/grey_dark</color>
    <color name="home_background">@color/light_background</color>

    <style name="Theme.dermate.NoActionBar">
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryVariant">@color/theme_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/theme_color</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.dermate.BottomBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:forceDarkAllowed">true</item>
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryVariant">@color/theme_color</item>
        <item name="colorOnPrimary">#000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/theme_color</item>
        <item name="fontFamily">@font/poppins</item>
    </style>
</resources>    